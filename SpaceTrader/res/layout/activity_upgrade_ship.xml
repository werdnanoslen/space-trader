<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/trade_leave"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_leave" 
            android:onClick="gotoPlanet"/>

        <TextView
            android:id="@+id/trade_cash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_cash_text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/trade_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
	<Button
        android:id="@+id/button_upgrade_armor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_upgrade_armor" 
        android:onClick="upgradeArmor" />


    <Button
        android:id="@+id/button_upgrade_guns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_upgrade_guns" 
        android:onClick="upgradeGuns" />


</LinearLayout>